<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ToDoDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/to_do_detail_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="ToDo detail"
        android:textSize="30sp"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/title_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".08"
        app:layout_constraintTop_toBottomOf="@+id/to_do_detail_text_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Title:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="left|center"
            android:paddingLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/to_do_title_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="To do title"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="left|center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/description_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".08"
        app:layout_constraintTop_toBottomOf="@+id/title_linear_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Description:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="left|center"
            android:paddingLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/to_do_description_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="To do description"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="left|center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/status_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".08"
        app:layout_constraintTop_toBottomOf="@+id/description_linear_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Status:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="left|center"
            android:paddingLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/to_do_status_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="To do status"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="left|center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/category_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".08"
        app:layout_constraintTop_toBottomOf="@+id/status_linear_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Category:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="left|center"
            android:paddingLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/to_do_category_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="To do category"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="left|center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/duration_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".08"
        app:layout_constraintTop_toBottomOf="@+id/category_linear_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Duration:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="left|center"
            android:paddingLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/to_do_duration_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="To do duration"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="left|center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>